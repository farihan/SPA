<table id="products" class="table table-striped table-hover table-condensed">   
    <thead>
        <tr>
            <th>No.</th>
            <th>Product Name</th>
            <th>Quantity per Unit</th>
            <th>Unit Price</th>
            <th>Units in Stock</th>
            <th>Units on Order</th>
            <th>Reorder Level</th>
            <th>Discontinued</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: productViewModel.products">
        <tr>
            <td data-bind="text: $root.itemNumber($index())"></td>
            <td data-bind="text: productName"></td>
            <td data-bind="text: quantityPerUnit"></td>
            <td data-bind="text: unitPrice"></td>
            <td data-bind="text: unitsInStock"></td>
            <td data-bind="text: unitsOnOrder"></td>
            <td data-bind="text: reorderLevel"></td>
            <td>
                <input type="checkbox" data-bind="checked: discontinued" /></td>
        </tr>
    </tbody>
</table>